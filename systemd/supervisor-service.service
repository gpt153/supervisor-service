[Unit]
Description=Supervisor Service - Multi-project supervisor with Claude Code
After=network.target postgresql.service
Wants=postgresql.service

[Service]
Type=simple
User=supervisor
Group=supervisor
WorkingDirectory=/opt/supervisor-service
EnvironmentFile=/opt/supervisor-service/.env
ExecStart=/usr/bin/node /opt/supervisor-service/dist/index.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=supervisor-service

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/supervisor-service
ReadWritePaths=/home/samuel/supervisor
ReadWritePaths=/home/samuel/.archon/workspaces

# Resource limits
LimitNOFILE=65536
LimitNPROC=4096

# Health check
TimeoutStartSec=60
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
