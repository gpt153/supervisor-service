# =================================================================
# Supervisor Service Configuration
# =================================================================

# -----------------------------------------------------------------
# Claude Authentication
# -----------------------------------------------------------------
# RECOMMENDED: Use OAuth token (works with Claude Pro/Max subscription)
# Get token by running: claude code oauth
# Then copy from: cat ~/.claude/config | jq -r '.oauthToken'
CLAUDE_CODE_OAUTH_TOKEN=

# ALTERNATIVE: Use API key (requires separate billing)
#ANTHROPIC_API_KEY=sk-ant-api-key-here

# -----------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------
DATABASE_URL=postgresql://postgres@/supervisor_service?host=/var/run/postgresql&port=5434
DATABASE_HOST=localhost
DATABASE_PORT=5434
DATABASE_NAME=supervisor_service
DATABASE_USER=postgres

# -----------------------------------------------------------------
# GitHub Configuration
# -----------------------------------------------------------------
GITHUB_TOKEN=your_github_token_here
GITHUB_WEBHOOK_SECRET=random_secret_32_chars

# -----------------------------------------------------------------
# Service Configuration
# -----------------------------------------------------------------
PORT=8081
NODE_ENV=production
LOG_LEVEL=info

# -----------------------------------------------------------------
# Project Paths
# -----------------------------------------------------------------
SUPERVISOR_ROOT=/home/samuel/supervisor
ARCHON_WORKSPACES=/home/samuel/.archon/workspaces

# -----------------------------------------------------------------
# MCP Server Configuration
# -----------------------------------------------------------------
MCP_GITHUB_ENABLED=true
MCP_ARCHON_ENABLED=false

# -----------------------------------------------------------------
# Telegram Bot (Optional)
# -----------------------------------------------------------------
TELEGRAM_BOT_TOKEN=
TELEGRAM_ENABLED=false

# -----------------------------------------------------------------
# API Authentication
# -----------------------------------------------------------------
API_SECRET=random_secret_here
JWT_SECRET=another_random_secret
API_KEYS=demo-key-123,demo-key-456

# -----------------------------------------------------------------
# Optional Features
# -----------------------------------------------------------------
WEB_DASHBOARD_ENABLED=true
REST_API_ENABLED=true
